@model library.Data.Book

<h1>Library Management System</h1>

<!-- action="/Ad/AddAnBook" formun içinde bu yazıyordu-->

<form method="post" >
    <div class="mt-3">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Title" type="text" name="Title" placeholder="Book Title" required />
    </div>
    <div class="mt-3">
        <label class="form-label">Author</label>
        <input class="form-control" type="text" asp-for="Author" name="Author" placeholder="Author" required />
    </div>
    <div class="mt-3">
        <label class="form-label">Genre</label>
        <input class="form-control" type="text" name="Genre" asp-for="Genre" placeholder="Genre" required />
    </div>
    <div class="mt-3">
        <button class=" btn btn-primary" asp-action="AddAnBook" asp-controller="Ad" type="submit">Add Book</button>
    </div>
</form>
<div class="mt-3">
    <!-- <a href="/Ad/GetAllBooks"><button class="btn btn-success">View Books</button></a>-->
    <a class="btn btn-success" asp-action="GetAllBooks" asp-controller="Ad">View Books</a>
</div>

